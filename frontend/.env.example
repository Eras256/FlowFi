# FlowFi Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# Network Configuration
NEXT_PUBLIC_CASPER_CHAIN_NAME=casper-test
NEXT_PUBLIC_CASPER_NODE_RPC=https://node.testnet.cspr.cloud/rpc

# CSPR.cloud Authentication (get from https://console.cspr.build)
NEXT_PUBLIC_CSPR_CLOUD_ACCESS_TOKEN=your-access-token
CSPR_CLOUD_ACCESS_TOKEN=your-access-token

# CEP-78 Contract (FlowFi Invoices Collection)
NEXT_PUBLIC_CASPER_CONTRACT_HASH=751bca3f85b61b4b8e881ceba32b10db125911834bfa30e79f3dc84f18244016
NEXT_PUBLIC_CASPER_CONTRACT_PACKAGE_HASH=113fd0f7f4f803e2401a9547442e2ca31bd9001b4fcd803eaff7a3dac11e4623

# API Configuration
NEXT_PUBLIC_API_URL=/api

# Supabase (optional - for persistent storage)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Gemini AI (for invoice analysis)
GEMINI_API_KEY=your-gemini-api-key

# Pinata IPFS (for document storage)
NEXT_PUBLIC_PINATA_API_KEY=your-pinata-api-key
NEXT_PUBLIC_PINATA_API_SECRET=your-pinata-api-secret
NEXT_PUBLIC_PINATA_JWT=your-pinata-jwt
NEXT_PUBLIC_PINATA_GATEWAY=https://gateway.pinata.cloud
PINATA_JWT=your-pinata-jwt
